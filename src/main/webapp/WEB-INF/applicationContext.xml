<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd"
   >
      
   <!-- Turn on HostPrecedingPropertyPlaceholderConfigurer -->
   <!-- http://jdwyah.blogspot.com/2006/12/updated-spring-configuration.html -->
   <bean id="propertyConfigurer" class="org.auscope.portal.server.util.PortalPropertyPlaceholderConfigurer">
      <property name="locations">
         <list>
            <value>classpath:config.properties</value>
            <value>classpath:env.properties</value>
         </list>
      </property>
   </bean>

    <bean id="knownTypes" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="knownTypeBomMonthly" />
                <ref bean="knownTypeBomDaily" />
                <ref bean="knownTypeBomExtreme" />
            </list>
        </constructor-arg>
    </bean>
    
    <bean id="googleMapIconUrls" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>http://maps.google.com/mapfiles/kml/paddle/pink-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/ltblu-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/ylw-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/grn-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/blu-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/wht-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/red-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/orange-blank.png</value>
                <value>http://maps.google.com/mapfiles/kml/paddle/purple-blank.png</value>
            </list>
        </constructor-arg>
    </bean>

   <bean id="knownTypeBomMonthly" class="org.auscope.portal.server.web.KnownFeatureTypeDefinition">
       <constructor-arg index="0" value="wml:monthly_climate_summary"/>
       <constructor-arg index="1" value="Monthly Climate Summary"/>
       <constructor-arg index="2" value=""/>
       <constructor-arg index="3" value="doBomClimateSummaryFilter.do"/>
       <constructor-arg index="4" value="http://maps.google.com/mapfiles/kml/paddle/ylw-blank.png"/>
   </bean>
   
   <bean id="knownTypeBomDaily" class="org.auscope.portal.server.web.KnownFeatureTypeDefinition">
       <constructor-arg index="0" value="wml:daily_climate_summary"/>
       <constructor-arg index="1" value="Daily Climate Summary"/>
       <constructor-arg index="2" value=""/>
       <constructor-arg index="3" value="doBomClimateSummaryFilter.do"/>
       <constructor-arg index="4" value="http://maps.google.com/mapfiles/kml/paddle/grn-blank.png"/>
   </bean>
   
   <bean id="knownTypeBomExtreme" class="org.auscope.portal.server.web.KnownFeatureTypeDefinition">
       <constructor-arg index="0" value="wml:extreme"/>
       <constructor-arg index="1" value="Extremes"/>
       <constructor-arg index="2" value=""/>
       <constructor-arg index="3" value="doBomClimateSummaryFilter.do"/>
       <constructor-arg index="4" value="http://maps.google.com/mapfiles/kml/paddle/red-blank.png"/>
   </bean>   
</beans>